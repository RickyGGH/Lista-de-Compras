<div class="product-group">
  <h2><%= @date.strftime("%A, %d de %B de %Y") %></h2>
  <% @products.each do |product| %>
    <% if product.present? %>
      <%= render(ProductCardComponent.new(product: { product: product })) %>
    <% else %>
      <% puts "DEBUG: Product is nil" %>
    <% end %>
  <% end %>
</div>
