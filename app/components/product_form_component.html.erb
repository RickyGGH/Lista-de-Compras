<%= form_with(model: Product.new, url: shopping_lists_path, local: false, remote: true) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :purchase_date %>
    <%= form.date_field :purchase_date %>
  </div>
  <div>
    <%= form.label :store_name %>
    <%= form.text_field :store_name %>
  </div>
  <div>
    <%= form.label :store_section_id %>
    <%= form.select :store_section_id, options_for_select(StoreSection.all.map{ |section| [section.name, section.id] }) %>
  </div>

  <div>
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>
  <div>
    <%= form.submit "Add Product" %>
  </div>
<% end %>
