<div class="product-card" data-product-id="<%= @product[:product].id %>">
  <% if @product[:product].present? %>
    <p><strong>Store Name:</strong> <%= @product[:product].store_name %></p>
    <p><strong>Store Section:</strong> <%= @product[:product].store_section.name %></p>
    <p><strong>Product:</strong> <%= @product[:product].name %></p>
    <p><strong>Quantity:</strong> <%= @product[:product].quantity %></p>
    <label>
      <input type="checkbox" <% if @product[:product].purchased %> checked <% end %>>
      Purchased
    </label>
  <% else %>
    <p>Error: Product data is missing or invalid</p>
  <% end %>
</div>
